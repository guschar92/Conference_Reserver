-- Table: reservations.conference

-- DROP TABLE reservations.conference;

CREATE TABLE reservations.conference
(
  id serial NOT NULL,
  scheduled timestamp without time zone,
  room integer,
  notes text,
  title text,
  endtime timestamp without time zone,
  participants text[],
  CONSTRAINT conference_pkey PRIMARY KEY (id),
  CONSTRAINT room_fk FOREIGN KEY (room)
      REFERENCES reservations.conference_rooms (cid) MATCH SIMPLE
      ON UPDATE NO ACTION ON DELETE NO ACTION
)
WITH (
  OIDS=FALSE
);
ALTER TABLE reservations.conference
  OWNER TO portal;


-- Table: reservations.conference_rooms

-- DROP TABLE reservations.conference_rooms;

CREATE TABLE reservations.conference_rooms
(
  cid serial NOT NULL,
  name text,
  CONSTRAINT cid_pk PRIMARY KEY (cid)
)
WITH (
  OIDS=FALSE
);
ALTER TABLE reservations.conference_rooms
  OWNER TO portal;
