-- Table: geonews.announcement

-- DROP TABLE geonews.announcement;

CREATE TABLE geonews.announcement
(
  id serial NOT NULL,
  title text,
  description text,
  category integer,
  pinned integer,
  date_created timestamp without time zone NOT NULL DEFAULT now(),
  author text,
  pinned_till timestamp without time zone,
  severity integer,
  CONSTRAINT announcement_pkey PRIMARY KEY (id),
  CONSTRAINT announcement_category_fkey FOREIGN KEY (category)
      REFERENCES geonews.category (cid) MATCH SIMPLE
      ON UPDATE NO ACTION ON DELETE NO ACTION
)
WITH (
  OIDS=FALSE
);
ALTER TABLE geonews.announcement
  OWNER TO portal;


-- Table: geonews.category

-- DROP TABLE geonews.category;

CREATE TABLE geonews.category
(
  cid serial NOT NULL,
  name text,
  CONSTRAINT category_pkey PRIMARY KEY (cid)
)
WITH (
  OIDS=FALSE
);
ALTER TABLE geonews.category
  OWNER TO portal;

-- Table: geonews."user"

-- DROP TABLE geonews."user";

CREATE TABLE geonews."user"
(
  user_id serial NOT NULL,
  name character varying(100),
  surname character varying(100),
  email character varying(100),
  username character varying(100),
  password character varying(1000),
  token character varying(1000),
  note character varying(1000),
  CONSTRAINT user_pkey PRIMARY KEY (user_id)
)
WITH (
  OIDS=FALSE
);
ALTER TABLE geonews."user"
  OWNER TO portal;

